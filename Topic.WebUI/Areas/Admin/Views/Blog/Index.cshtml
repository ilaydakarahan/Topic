@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Blog Adı</th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.CoverImage" /></td>
            <td>@item.Title</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.ShortDescription</td>
            <td>
                <a asp-action="DeleteBlog" asp-route-id="@item.BlogId" class="btn btn-outline-danger">Sil</a>
                <a asp-action="UpdateBlog" asp-route-id="@item.BlogId" class="btn btn-outline-info">Güncelle</a>
            </td>

        </tr>
    }
</table>

<br />
<a asp-action="CreateBlog" class="btn btn-outline-primary">Yeni Blog Ekle</a>

